generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int      @id
  nick_name  String   @unique
  sign       Boolean
  state      Int
  win        Int      @default(0)
  lose       Int      @default(0)
  ladder     Int      @default(1000)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

